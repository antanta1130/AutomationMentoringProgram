<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Properties>
		<Property name="LoginLogPath">logs/person.log</Property>
	</Properties>

	<Appenders>
		<File name="A1" fileName="${LoginLogPath}" append="false">
			<PatternLayout
				pattern="%-5p %d{yyyy-MM-dd HH:mm:ss.ms} [%t] %c{1} %L - %m%n" />
		</File>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5level %d{HH:mm:ss.SSS} [%t] - %m%xEx%n" />
		</Console>
	</Appenders>

	<Loggers>
		<Root level="debug">
			<AppenderRef ref="STDOUT" level="info" />
			<AppenderRef ref="A1"/>
		</Root>
	</Loggers>

</Configuration>